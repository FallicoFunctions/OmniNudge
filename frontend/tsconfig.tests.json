{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": ".test-dist",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/utils/**/*.ts",
    "src/validation/**/*.ts",
    "src/hooks/useDebouncedValue.ts",
    "src/types/**/*.ts",
    "tests/**/*.ts"
  ]
}
